@using WhiteGoodsStock.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLCUSTOMER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>SURNAME</th>
        <th>CITY</th>
        <th>BALANCE</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    @foreach (var x in Model)
            {
                <tr>
                    <td>@x.id</td>
                    <td>@x.name</td>
                    <td>@x.surname</td>
                    <td>@x.city</td>
                    <td>@x.balance</td>
                    <td><a href="/Customer/DeleteCustomer/@x.id" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Customer/BringCustomer/@x.id" class="btn btn-success">Update</a></td>
                </tr>
            }
</table>

@*modelden ıpaged list al , sayfaya göre yönlendir sayfa numaralandırması için *@ 
@Html.PagedListPager((IPagedList)Model, page=> Url.Action("Index", new {page})) 

<a href="/Customer/NewCustomer/" class="btn btn-primary">New Customer</a>
