@using WhiteGoodsStock.Models.Entity
@model List<TBLCATEGORY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>CATEGORY NAME</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td><a href="/Category/DeleteCategory/@x.id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/BringCategory/@x.id" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Category/NewCategory/" class="btn btn-warning">New Category</a>
